<Page x:Class="FtpExplorerApp.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FtpExplorerApp"
      mc:Ignorable="d" 
      d:DesignHeight="410" d:DesignWidth="790"
      Title="MainPage">

    <Grid>
        <ListBox x:Name="explorerListBox" HorizontalAlignment="Left" Height="365" Margin="10,35,0,0" VerticalAlignment="Top" Width="770" MouseDoubleClick="ExplorerListBoxMouseDoubleClick"/>
        <Button x:Name="uploadButton" Content="Upload" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="UploadButtonClick"/>

    </Grid>
</Page>
